<launch>
    <arg name="bag_file" default="$(env HOME)/Data/jackal_lidar_3d/jackal2_map_Lab.bag" />
    <!-- Options: float, double -->
    <arg name="precision" default="float" />
    <!-- Options: float, double -->
    <arg name="surf_mapping_method" default="bayesian_hilbert" />
    <!-- Options: gp_occ, bayesian_hilbert -->
    <arg name="visualize_sdf" default="true" />
    <!-- whether to launch rviz for visualization -->
    <arg name="open_rviz" default="true" />
    <!-- whether to launch rqt_plot for performance analysis -->
    <arg name="open_rqt_plot" default="true" />
    <!-- whether to launch the sdf visualization node -->
    <arg name="robot_name" default="jackal2" />
    <!-- playback rate for rosbag -->
    <arg name="rosbag_play_rate" default="0.25" />

    <node pkg="rosbag" type="play" name="rosbag_play" args="$(arg bag_file) --rate=$(arg rosbag_play_rate) --clock" output="screen"/>

    <node pkg="tf2_ros" type="static_transform_publisher" name="map_odom_transformer" args="0 0 0 0 0 0 1 map odom" />
    <node pkg="erl_gp_sdf_ros" type="sdf_mapping_node" name="sdf_mapping_node" output="screen">
        <rosparam command="load" file="$(find erl_gp_sdf_ros)/config/ros1/$(arg surf_mapping_method)_$(arg precision)_3d.yaml" />
        <rosparam command="load" file="$(find erl_gp_sdf_ros)/config/ros1/use_lidar_frame_3d_$(arg precision).yaml" />
        <param name="map_dim" value="3" />
        <param name="double_precision" value="$(eval precision == 'double')" />
        <param name="surface_mapping_setting_file" value="$(find erl_gp_sdf_ros)/config/jackal_3d/$(arg surf_mapping_method)_surf_mapping_lidar_$(arg precision).yaml" />
        <param name="sdf_mapping_setting_file" value="$(find erl_gp_sdf_ros)/config/jackal_3d/$(arg surf_mapping_method)_sdf_mapping_lidar_$(arg precision).yaml" />
        <param name="use_odom" value="false" />
        <param name="odom_topic" value="/$(arg robot_name)/dlo/odom_node/odom" />
        <param name="odom_msg_type" value="nav_msgs/Odometry" />
        <param name="world_frame" value="map" />
        <param name="sensor_frame" value="$(arg robot_name)/os_sensor" />
        <param name="scan_topic" value="/$(arg robot_name)/ouster/points" />
        <param name="scan_type" value="sensor_msgs/PointCloud2" />
        <param name="scan_frame_setting_file" value="$(find erl_gp_sdf_ros)/config/jackal_3d/lidar_frame_3d_360.yaml" />
        <param name="scan_stride" value="1" />
        <param name="convert_scan_to_points" value="$(eval surf_mapping_method == 'bayesian_hilbert')" />
        <param name="scan_in_local_frame" value="true" />
        <param name="depth_scale" value="0.001" />
        <param name="publish_tree" value="true" />
    </node>

    <group if="$(arg visualize_sdf)">
        <node pkg="erl_gp_sdf_ros" type="sdf_visualization_node" name="sdf_visualization_node" output="screen">
            <param name="resolution" value="0.02" />
            <param name="x_cells" value="101" />
            <param name="y_cells" value="101" />
            <param name="x" value="0.0" />
            <param name="y" value="0.0" />
            <param name="z" value="0.0" />
            <param name="publish_gradient" value="true" />
            <param name="publish_sdf_variance" value="true" />
            <param name="publish_gradient_variance" value="true" />
            <param name="publish_covariance" value="false" />
            <param name="publish_grid_map" value="true" />
            <param name="publish_point_cloud" value="true" />
            <param name="publish_rate" value="10.0" />
            <param name="attached_to_frame" value="true" />
            <param name="world_frame" value="map" />
            <param name="attached_frame" value="$(arg robot_name)/os_sensor" />
            <param name="service_name" value="/sdf_mapping_node/sdf_query" />
            <param name="map_topic_name" value="sdf_grid_map" />
            <param name="point_cloud_topic_name" value="sdf_point_cloud" />
        </node>
    </group>

    <group if="$(arg open_rviz)">
        <node pkg="rviz" type="rviz" name="rviz" args="-d $(find erl_gp_sdf_ros)/rviz/$(arg robot_name)_3d_lidar.rviz" />
    </group>

    <group if="$(arg open_rqt_plot)">
        <node pkg="rqt_plot" type="rqt_plot" name="rqt_plot" args="/sdf_mapping_node/update_time/temperature /sdf_mapping_node/query_time/temperature" />
    </group>
</launch>
